generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String    @unique
  image    String?
  gender   Gender?
  password String?
  Profile  Profile[]
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  bio       Bio
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Bio {
  university String
  course     String
  aboutMe    String
  state      String
  country    String
  downloads  Int
  uploads    Int
  likes      Int
}
