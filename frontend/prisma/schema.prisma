generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Category {
  RESEARCH
  SEMINAR
  PROJECT
  ANALYSIS
}

model User {
  id                  String     @id @default(auto()) @map("_id") @db.ObjectId
  name                String?
  email               String     @unique
  image               String?
  gender              Gender?
  password            String?
  emailVerified       DateTime?
  verificationCode    String?
  codeExpiry          DateTime?
  lastCodeRequestAt   DateTime?
  Profile             Profile[]
  Document            Document[]
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  bio       Bio
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Bio {
  university String
  course     String
  aboutMe    String
  state      String
  country    String
  downloads  Int
  uploads    Int
  likes      Int
}

model Document {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    Category
  institution String
  year        String
  fileUrl     String
  fileKey     String
  fileName    String
  fileSize    Int
  downloads   Int      @default(0)
  likes       Int      @default(0)
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
